{%- comment -%}
  Adaptive Image Component v2
  核心特性：
  - 自动读取图片元数据保持原始比例
  - 原生CSS aspect-ratio支持
  - 自动响应式断点检测
  - 基于视口的动态尺寸计算
{%- endcomment -%}

{%- liquid
  # 优先使用图片自身宽高比
  assign desktop_aspect = image_desktop.aspect_ratio | default: 1.7777
  assign mobile_aspect = image_mobile.aspect_ratio | default: desktop_aspect

  # 智能尺寸计算
  assign desktop_width = image_desktop.width | default: 2000
  assign mobile_width = image_mobile.width | default: 1000

  # 响应式尺寸生成
  capture desktop_srcset
    echo image_desktop | img_url: '400x' | append: ' 400w,'
    echo image_desktop | img_url: '600x' | append: ' 600w,'
    echo image_desktop | img_url: '800x' | append: ' 800w,'
    echo image_desktop | img_url: '1000x' | append: ' 1000w,'
    echo image_desktop | img_url: '1200x' | append: ' 1200w,'
    echo image_desktop | img_url: '1400x' | append: ' 1400w'
  endcapture

  capture mobile_srcset
    echo image_mobile | img_url: '300x' | append: ' 300w,'
    echo image_mobile | img_url: '450x' | append: ' 450w,'
    echo image_mobile | img_url: '600x' | append: ' 600w'
  endcapture
-%}

<style>
  .adaptive-image{
    position: relative;
    display: block;
    margin: 0 auto;
  }

  .adaptive-image img {
    width: 100%;
    height: auto;
    display: block;
    transition: opacity 0.3s ease;
  }

  /* 原生宽高比支持 */
  .adaptive-image--desktop {
    aspect-ratio: {{ desktop_aspect }};
  }

  .adaptive-image--mobile {
    aspect-ratio: {{ mobile_aspect }};
  }

  @media (min-width: 750px) {
    .adaptive-image--mobile {
      display: none !important;
    }
  }

  @media (max-width: 749px) {
    .adaptive-image--desktop {
      display: none !important;
    }
  }
</style>

<div class="adaptive-image adaptive-image--desktop">
  <img 
    srcset="{{ desktop_srcset }}" 
    sizes="(min-width: 1600px) 1400px, (min-width: 1200px) 1200px, (min-width: 990px) 1000px, (min-width: 750px) 800px, 100vw"
    src="{{ image_desktop | img_url: '800x' }}"
    alt="{{ alt | escape }}"
    loading="{% if lazy %}lazy{% else %}eager{% endif %}"
    decoding="async"
    width="{{ desktop_width }}"
    height="{{ desktop_width | divided_by: desktop_aspect }}"
    {% if preload %}fetchpriority="high"{% endif %}
  >
</div>

<div class="adaptive-image adaptive-image--mobile">
  <img 
    srcset="{{ mobile_srcset }}" 
    sizes="(max-width: 749px) 100vw, 50vw"
    src="{{ image_mobile | img_url: '600x' }}"
    alt="{{ alt | escape }}"
    loading="{% if lazy %}lazy{% else %}eager{% endif %}"
    decoding="async"
    width="{{ mobile_width }}"
    height="{{ mobile_width | divided_by: mobile_aspect }}"
    {% if preload %}fetchpriority="high"{% endif %}
  >
</div>