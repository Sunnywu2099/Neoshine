<style>
  #shopify-section-{{section.id}} .shapes-wrapper{
    display: flex;
    justify-content: center;
    gap: 36px;
  }
  #shopify-section-{{section.id}} .shapes-wrapper .item{
    flex: 0 0 88px;
    flex-shrink: 0;
    text-align: center;
  }
  #shopify-section-{{section.id}} .shapes-wrapper .item img{
    width: 82px;
    height: 82px;
    object-fit: cover;
    margin-bottom: 15px;
  }
  #shopify-section-{{section.id}} .shapes-wrapper .item .shape-name{
    color: #121212;
    text-align: center;
    font-size: 20px;
    font-weight: 500;
    line-height: 26px;
    text-transform: capitalize;
  }
  #shopify-section-{{section.id}} .shapes .section-title{
    margin: 0 0 40px;
    color: #121212;
    text-align: center;
    font-size: 36px;
    font-weight: 500;
    line-height: 48px;
    text-transform: capitalize;
  }
  @media screen and (max-width: 1200px) {
    #shopify-section-{{section.id}} .shapes .section-title{
      font-size: 24px;
      line-height: 1.2;
      margin-bottom: 20px;
    }
  }
  @media screen and (max-width: 749px) {
    #shopify-section-{{section.id}} .shapes .section-title{
      font-size: 26px;
      line-height: 1.2;
    }
  }
</style>

{% assign full_width = '100vw' %}
{% assign sizes = full_width %}
{% assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' %}
<div class="shapes page-width section-pt">
  <h2 class="section-title">{{section.settings.title}}</h2>
  <div class="shapes-wrapper">
    {% for block in section.blocks %}
      <a class="item" href="{{block.settings.url}}">
          {{
            block.settings.image
            | image_url: width: block.settings.image.width
            | image_tag:
              width: block.settings.image.width,
              height: block.settings.image.height,
              class: 'icon',
              sizes: sizes,
              widths: widths,
              alt: block.settings.text,
              loading: 'lazy'
          }}
          <span class="shape-name">{{ block.settings.content }}</span>
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Home shapes",
  "tag": "section",
  "class": "home-shapes",
  "limit": 1,
  "max_blocks": 8,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title",
      "default": "Shop by Diamond Shape"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
          "type": "text",
          "id": "content",
          "label": "content"
        },
        {
          "type": "url",
          "id": "url",
          "label": "url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home shapes"
    }
  ]
}
{% endschema %}
