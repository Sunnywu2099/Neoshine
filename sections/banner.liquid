<div class="banner">
  <div class="img-wrapper">
    {% render 'responsive-image',
      sid: section.id,
      image_desktop: section.settings.pc_image,
      image_mobile: section.settings.mobile_image,
      alt: "Product Banner",
      lazy: false,
      preload: true

    %}
  </div>
  
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    
  })
</script>

{% schema %}
{
  "name": "Home banner",
  "tag": "section",
  "class": "home-banner",
  "limit": 1,
  "max_blocks": 3,
  "settings": [],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "pc_image",
          "label": "pc_image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "mobile_image"
        },
        {
          "type": "textarea",
          "id": "title",
          "label": "title"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "content"
        },
        {
          "type": "url",
          "id": "url",
          "label": "url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home banner"
    }
  ]
}
{% endschema %}
