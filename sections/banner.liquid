<style>

#shopify-section-{{section.id}} .banner{
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  width:100%;
  display: block;
  position: relative;
}
  #shopify-section-{{section.id}} .banner:after{
    display:none;
  }

#shopify-section-{{section.id}} .banner img{
  width:100%;
  
}
  #shopify-section-{{section.id}} .banner img.mobile{
    display:none;
  }
  
#shopify-section-{{section.id}} .banner .centent{
  position: absolute;
  display:flex;
  justify-content: center;
  flex-direction: column;
  width:100%;
  max-width:1200px;
  margin:0 auto;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
margin-left: 30px;
}
  #shopify-section-{{section.id}} .banner .centent .title{
    margin:0;
  }
  #shopify-section-{{section.id}} .banner .centent .title *{
     margin:0;
  }
  #shopify-section-{{section.id}} .banner .centent .title h1{
    font-size:3rem;
   
  }
  #shopify-section-{{section.id}} .banner .centent .datalist{
    font-size:26px;
    
  }
  #shopify-section-{{section.id}} .banner .centent .btn{
    display: flex;
    align-items: center;
    justify-content: center;
    /* padding:0 30px; */
    /* font-size:20px; */
     background: #83a78d;
    color:#fff;
     width: fit-content;
    margin-top: 10px;
    text-decoration: none;
    border-color:#fff;
    /* min-height: 35px; */
  }
  #shopify-section-{{section.id}} .banner .centent .btn:after{
    display:none;
  }
  #shopify-section-{{section.id}} .banner .centent .btn:before{
    display:none;
  }
  @media screen and (max-width: 750px) {
    #shopify-section-{{section.id}} .banner img.pc{
      display:none;
    }
     #shopify-section-{{section.id}} .banner img.mobile{
      display:block;
    }
    #shopify-section-{{section.id}} .banner .centent{
      max-width:90%;
      top: calc(50% + 210px);
      margin-left: 0;
      display: flex;
      align-items: center;
    }
    #shopify-section-{{section.id}} .banner .centent .title *{
      font-size:2rem;
    }
    #shopify-section-{{section.id}} .banner .centent .datalist{
      font-size:1.2rem;
    }
    #shopify-section-{{section.id}} .banner .centent .btn{
      margin-top: 20px;
    }
  }
  

  
</style>

<div class="banner">
  <img
    class="pc"
    src="{{ section.settings.pc_image | img_url:'' }}"
    alt="{{ section.settings.pc_image.alt }}"
    width="100%"
    height=""
  >
  <img
    class="mobile"
    src="{{ section.settings.mobile_image | img_url:'' }}"
    alt="{{ section.settings.mobile_image.alt }}"
    width="100%"
    height=""
  > 
  
  <div class="centent">
    <div class="title">{{ section.settings.title }}</div>
    <div class="datalist">{{ section.settings.details }}</div>

    <a href="{{ section.settings.url }}" class="button btn">{{ section.settings.btn }}</a>
  </div>
</div>

{% schema %}
{
  "name": "banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "pc_image",
      "label": "pc_image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "mobile_image"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "title"
    },
    {
      "type": "richtext",
      "id": "details",
      "label": "details"
    },
    {
        "type": "text",
        "id": "btn",
        "label": "btn"
      },
      {
        "type": "url",
        "id": "url",
        "label": "url"
      },
    {
    "type": "header",
    "content": "t:sections.all.padding.section_padding_heading"
  },
  {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 36
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 36
  }
  ],
  "presets": [
    {
      "name": "banner"
    }
  ]
}
{% endschema %}
