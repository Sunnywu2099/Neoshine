{%- style -%}
#shopify-section-{{ section.id }}{
  overflow:hidden;
}
  
  @media screen and (max-width: 749px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.4 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.4 | round: 0 }}px;
  }
    #shopify-section-{{ section.id }} h2{
      color: #181818;
      text-align: center;
      font-family: "Lato";
      font-size: 26px;
      font-style: normal;
      font-weight: 400;
      line-height: 28px; /* 107.692% */
      margin-bottom:24px;
    }
    #shopify-section-{{ section.id }} .index-style{
      display: grid;
      gap: 8px;
      grid-template-columns: repeat(5, auto);
      overflow-x:auto;
    }
    #shopify-section-{{ section.id }} .index-style-box{
      height: 260px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-end;
      position: relative;
      width: 160px;
    }
    #shopify-section-{{ section.id }} .index-style-box h3{
      font-family: "Lato";
      font-size: 14px;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
      position: absolute;
      bottom: 23px;
    }    
  }

  #shopify-section-{{ section.id }} a{
    color: rgb(var(--color-foreground));
    text-decoration:none;
  }
  

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    #shopify-section-{{ section.id }} h2{
      color: #181818;
      text-align: center;
      font-family: "Lato";
      font-size: 32px;
      font-style: normal;
      font-weight: 400;
      line-height: 38px; /* 118.75% */
      margin-bottom:100px;
    }
    #shopify-section-{{ section.id }} .index-style{
      display: grid;
      gap: 20px;
      grid-template-columns: repeat(5, auto);
    }
    #shopify-section-{{ section.id }} .index-style-box{
      height: 800px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-end;
      position: relative;
      width: 236px;
      filter: brightness(0.8);
      transition: all linear 0.5s;
    }
    #shopify-section-{{ section.id }} .index-style-box:hover{
      filter: brightness(1);
      width:494px;
    }
    #shopify-section-{{ section.id }} .index-style-box:hover .button{
      opacity: 1;
      visibility: visible;
    }
    #shopify-section-{{ section.id }} .index-style-box:nth-of-type(even) {
      margin-top: 60px;
    }
    #shopify-section-{{ section.id }} .index-style-box h3{
      font-family: "Lato";
      font-size: 52px;
      font-weight: 400;
      line-height: 56px;
      letter-spacing: 4.16px;
      transform: rotate(-90deg);
      margin: 0;
      width: 100%;
      white-space: nowrap;
      position: absolute;
      bottom: 150px;
    }
    #shopify-section-{{ section.id }} .index-style-box:hover .first{
      opacity: 0;
      visibility: hidden;       
    }
    #shopify-section-{{ section.id }} .index-style-box:hover .second{
      opacity: 1;
      visibility: visible;       
    }    
    #shopify-section-{{ section.id }} .index-style-box h3.second{
      opacity: 0;
      visibility: hidden; 
      left:20px;
      transform: rotate(0deg);
      transition: all linear 0.5s;
    }    
    #shopify-section-{{ section.id }} .index-style-box .button{
      background: #83a78d;
      opacity: 0;
      visibility: hidden;
      transition: all linear 0.5s;
      position: absolute;
      bottom:80px;
      left:20px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient isolate section-{{ section.id }}-padding">
  <h2 class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">{{ section.settings.title }}</h2>
  <div class="page-width index-style">
    {% for block in section.blocks %}
      <div class="index-style-box index-style-box-{{ block.id }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <h3 class="first"><a href="{{ block.settings.link }}">{{ block.settings.title }}</a></h3>
        <h3 class="second small-hide"><a href="{{ block.settings.link }}">{{ block.settings.title }}</a></h3>
        <a class="button button--secondary small-hide" href="{{ block.settings.link }}">
          SHOP NOW
        </a>
      </div>
      <style>
        .index-style-box-{{ block.id }}{
          background:url({{ block.settings.image | img_url:'' }});
          background-size:cover;
          background-position:center center;
        }
      </style>
    {% endfor %}
  </div>
</div>


{% schema %}
  {
    "name": "index style",
    "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title"
    },       
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-1"
    },      
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }      
    ],
  "blocks": [
    {
      "type": "type",
      "name": "type",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },        
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },       
        {
          "type": "url",
          "id": "link",
          "label": "link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "index style"
    }
  ]    
  }
{% endschema %}