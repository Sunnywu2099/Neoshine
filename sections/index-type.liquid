{%- style -%}
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    #shopify-section-{{ section.id }} .type-box h3{
      color: #222;
      /* font-family: "ZCOOLXiaoWei"; */
      font-size: 48px;
      font-weight: 400;
      line-height: 56px; /* 116.667% */
      margin:0 0 22px;
    }
    #shopify-section-{{ section.id }} .type-box p{
      color: #222;
      font-size: 16px;
      font-weight: 400;
      line-height: 24px; /* 150% */
      opacity: 0.75;
    }   
    #shopify-section-{{ section.id }} .index-box{
      display: flex;
      gap:20px;
    }
    #shopify-section-{{ section.id }} .type-box{
      display: flex;
      align-items: flex-start;
      flex-direction: column;
      justify-content: flex-end;
      /* padding: 5rem; */
      max-width:calc(50% - 10px);
      flex:0 0 50%;
      text-decoration:none;
    }
  }
  
#shopify-section-{{ section.id }} .type-box{
  transition: all linear 0.5s;
 position: relative;
}
#shopify-section-{{ section.id }} .type-box:hover{
  background-size: 102%;
}
  #shopify-section-{{ section.id }} .type-box img{
    width:100%;
  }
  #shopify-section-{{ section.id }} .type-box .centent{
     position: relative;
    text-align: center;
    width:100%;
    bottom:10px;
    left:50%;
    transform: translateX(-50%);
    height:80px;
  }
  #shopify-section-{{ section.id }} .type-box .centent .title{
    margin:0;
    font-size: 22px;
    margin-bottom:15px;
  }
  #shopify-section-{{ section.id }} .type-box .centent .title em{
        font-style: normal;
    font-size: 25px;
  }
  #shopify-section-{{ section.id }} .type-box .centent a{
    text-decoration: none;
    /* font-size: 18px; */
    font-weight: 400;
    line-height: 24px;
    padding:3px 30px;
   background: #83A78D;
    color:#fff;

    
  }
  #shopify-section-{{ section.id }} .index-box .tap{
    /* position: absolute;
    top:0px;
    left:20px; */
    font-size:20px;
    z-index:2;
    position: relative;
  }
  #shopify-section-{{ section.id }} .index-box .tap:after{
    position: absolute;
    bottom:5px;
     content: '';
    display:block;
    width:100%;
    border-bottom: 10px solid #83A78D;
    z-index:-1;
  }
  #shopify-section-{{ section.id }} .button:after,#shopify-section-{{ section.id }} .button:before{
    display:none;
  }

  @media screen and (max-width: 749px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
    #shopify-section-{{ section.id }} .type-box h3{
      color: #222;
      font-family: "ZCOOLXiaoWei";
      font-size: 26px;
      font-weight: 400;
      line-height: 100%;
      margin:0 0 22px;
    }
    #shopify-section-{{ section.id }} .type-box p{
      color: #222;
      font-size: 14px;
      font-weight: 400;
      line-height: 24px; /* 150% */
      opacity: 0.75;
    }    
    #shopify-section-{{ section.id }} .type-box{
      display: flex;
      align-items: flex-start;
      flex-direction: column;
      justify-content: center;
      /* padding: 16px; */
      max-width:100%;
      flex:0 0 100%;
      text-decoration:none;
    }  
    #shopify-section-{{ section.id }} .index-box {
      display: flex;
      flex-direction:column;
      gap:20px;
    }  
     #shopify-section-{{ section.id }} .type-box .centent{
           position: initial;
           transform: translateX(0%);
     }
    #shopify-section-{{ section.id }} .index-box .tap{
      font-size: 16px;
    }
    #shopify-section-{{ section.id }} .index-box .tap:after{
       border-bottom: 8px solid #83A78D;
    }
  }


  
  
  
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient isolate">
  <div class="page-width section-{{ section.id }}-padding index-box {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {% for block in section.blocks %}
      <div class="type-box type-box-{{ block.id }}" href="{{ block.settings.link }}">
        {% if block.settings.tap != black %}
        <div class="tap">
          {{ block.settings.tap }}
        </div>
        {% endif %}
        
            
            {% assign full_width = '100vw' %}
            {% assign sizes = full_width %}
            {% assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' %}
            {{
              block.settings.image
              | image_url: width: block.settings.image.width
              | image_tag:
                width: block.settings.image.width,
                height: '',
                class: '',
                sizes: sizes,
                widths: widths,
                loading: 'lazy',
                alt: block.settings.image.alt | escape
            }}
        <div class="centent">
          <!-- <h3>{{ block.settings.title }}</h3> -->
          <div class="title">{{ block.settings.title }}</div>
          <a class="button" href="{{ block.settings.link }}">{{ block.settings.text }}</a>
        </div>
        
      </div>
      
    {% endfor %}
  </div>
</div>


{% schema %}
  {
    "name": "index type",
    "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-1"
    },      
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }      
    ],
  "blocks": [
    {
      "type": "type",
      "name": "type",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },      
        {
          "type": "inline_richtext",
          "id": "tap",
          "label": "tap"
        },
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "text"
        },        
        {
          "type": "url",
          "id": "link",
          "label": "link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "index type"
    }
  ]    
  }
{% endschema %}