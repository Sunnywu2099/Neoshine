<style>
  #shopify-section-{{section.id}} .social-wrapper{
  }
  #shopify-section-{{section.id}} .social .view-more{
    margin: 50px auto 0;
    display: flex;
    width: 190px;
    height: 42px;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
    border-radius: 3px;
    border: 1px solid #121212;
    font-size: 20px;
    font-weight: 700;
    line-height: 28px;
    text-transform: uppercase;
    box-sizing: border-box;
    transition: all .3s ease-in-out;
  }
  #shopify-section-{{section.id}} .social .view-more:hover{
    background-color: #121212;
    color: #fff;
  }
  #shopify-section-{{section.id}} .social-wrapper .swiper-slide{
    cursor: pointer;
  }
  #shopify-section-{{section.id}} .user-wrapper{
    position: absolute;
    top: 20px;
    left: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
  }
  #shopify-section-{{section.id}} .user-wrapper img{
    width: 32px;
  }
  #shopify-section-{{section.id}} .user-wrapper .user-name{
    font-size: 15px;
    font-weight: 400;
    line-height: 20px;
  }
  #social-popup{
    position: fixed;
    font-size: 15px;
    z-index: 99999;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, .8);
    display: none;
  }
  .toggle-popup{
    position: absolute;
    height: 30px;
    width: 30px;
    color: #fff;
    font-size: 24px;
    top: 17px;
    right: 24px;
    line-height: 30px;
    text-align: center;
  }
  .toggle-popup:hover{
    cursor: pointer;
    opacity: .8;
  }
  #popup-content{
    background: #fff;
    height: 70%;
    max-width: 900px;
    border-radius: 16px;
    display: flex;
    justify-content: space-between;
    overflow: hidden;
  }
  #popup-content .info-wrapper{
    width: 500px;
    display: flex;
    flex-direction: column;
  }
  #popup-content .comment-wrapper{
    padding: 20px;
    flex: 1;
    border-bottom: 1px solid #e7e7e7;
  }
  #popup-content .comment-wrapper p{
    font-size: 14px;
    line-height: 1.4;
  }
  #popup-content .media-wrapper{
    width: calc(100% - 500px);
  }
  #popup-content .media-wrapper .swiper{
    height: 100%;
  }
  #popup-content .media-wrapper img,
  #popup-content .media-wrapper video{
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  #popup-content .brand{
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 20px;
    border-bottom: 1px solid #e7e7e7;
  }
  #popup-content .brand img{
    width: auto;
  }
  #popup-content .date{
    text-align: center;
    padding: 0px 20px;
  }
  @media screen and (max-width: 1200px) {
    #shopify-section-{{section.id}} .social .view-more{
      margin: 30px auto 0;
      width: 130px;
      height: 28px;
      font-size: 14px;
      line-height: 22px;
    }
    #popup-content{
      max-width: 90%;
    }
  }
  @media screen and (max-width: 749px) {
    #shopify-section-{{section.id}} .guarantee .view-more{
      width: 190px;
    }
    #shopify-section-{{section.id}} .user-wrapper{
      top: 12px;
      left: 12px;
      gap: 5px;
    }
    #shopify-section-{{section.id}} .user-wrapper img{
      width: 18px;
      height: 18px;
    }
    #shopify-section-{{section.id}} .user-wrapper .user-name{
      font-size: 12px;
      line-height: 16px;
    }
    .toggle-popup{
      top: 3px;
      right: 3px;
    }
    #popup-content{
      height: 88%;
      flex-direction: column;
      overflow-y: auto;
    }
    #popup-content .info-wrapper{
      width: 100%;
    }
    #popup-content .brand{
      padding: 10px;
    }
    #popup-content .comment-wrapper{
      padding: 10px;
    }
  }
</style>

<div class="social page-width section-pt section-pb">
  <h2 class="section-title">{{section.settings.title}}</h2>
  <div class="social-wrapper swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide" data-index="{{forloop.index0}}">
            {% render 'responsive-image',
              sid: section.id,
              image_desktop: block.settings.pc_image,
              image_mobile: block.settings.pc_image,
              alt: section.settings.title,
              lazy: true,
              preload: false
            %}
            <div class="user-wrapper">
              <img src="{{ block.settings.user_img | img_url: '32x' }}" alt="{{block.settings.user_name}}" width="32" height="32" loading="lazy">
              <span class="user-name" style="color: {{block.settings.color}};">{{block.settings.user_name}}</span>
            </div>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-prev">
      {% render 'banner-prev' %}
    </div>
    <div class="swiper-button-next">
      {% render 'banner-next' %}
    </div>
  </div>
  <a class="view-more" href="{{ section.settings.btn_url }}" target="_blank">{{ section.settings.btn_name }}</a>
</div>

<div id="social-popup">
  <span class="toggle-popup">✕</span>
  <div id="popup-content"></div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const guarantee_swiper = new Swiper('.social .swiper', {
      slidesPerView: 1.2,
      spaceBetween: 10,
      loop: true,
      navigation: {
        nextEl: '.social .swiper-button-next',
        prevEl: '.social .swiper-button-prev',
      },
      breakpoints: { 
        750: {  //当屏幕宽度大于等于768 
          slidesPerView: 3,
          spaceBetween: 15
        },
        1200: {  //当屏幕宽度大于等于1280
          slidesPerView: 4,
          spaceBetween: 20
        }
      },
      pagination: {
        el: '.guarantee .swiper-pagination',
        type : 'progressbar',
      },
    })

    
    
    let popupContent = ``;
    let post_data = [
      {% for block in section.blocks %}
        {% assign bs = block.settings %}  
        {
          img1: {% if bs.img1 %}"{{ bs.img1 | img_url: 'master' | escape }}"{% else %}null{% endif %},
          img2: {% if bs.img2 %}"{{ bs.img2 | img_url: 'master' | escape }}"{% else %}null{% endif %},
          img3: {% if bs.img3 %}"{{ bs.img3 | img_url: 'master' | escape }}"{% else %}null{% endif %},
          video: {% if bs.video %}"{{ bs.video | escape }}"{% else %}null{% endif %},
          likes: {% if bs.likes %}{{ bs.likes }}{% else %}0{% endif %},
          comment: {% if bs.comment %}"qwertyuiop"{% else %}null{% endif %},
          date: {% if bs.date %}"{{ bs.date | escape }}"{% else %}null{% endif %}
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ];

    $('.social-wrapper .swiper-slide').on('click', function () {
      const index = $(this).data('index');
      const info = post_data[index];
      let meidiaContent = ``;
      // 判断是视频还是图片
      if (info.video) {
        meidiaContent = `<video controls width="100%" height="100%">
          <source src="${info.video}" type="video/mp4">
        </video>`;
      } else {
        // 收集所有有效的图片URL
        const images = [info.img1, info.img2, info.img3].filter(img => img !== null);
        
        if (images.length > 1) {
          // 多张图片时创建轮播
          meidiaContent = `
            <div class="popup-swiper swiper">
              <div class="swiper-wrapper">
                ${images.map(img => `
                  <div class="swiper-slide">
                    <img src="${img}" alt="" loading="lazy">
                  </div>
                `).join('')}
              </div>
              <div class="swiper-pagination"></div>
              <div class="swiper-button-prev">{% render 'banner-prev' %}</div>
              <div class="swiper-button-next">{% render 'banner-next' %}</div>
            </div>`;
        } else if (images.length === 1) {
          // 单张图片直接显示
          meidiaContent = `<img src="${images[0]}" alt="" loading="lazy">`;
        }
      }
      
      popupContent += `
        <div class="media-wrapper">
          ${meidiaContent}
        </div>
        <div class="info-wrapper">
          <div class="brand">
            <img src="https://cdn.shopify.com/s/files/1/0897/6921/4241/files/neoshine-logo_2.svg?v=1732765111" alt="" loading="lazy" width="32" height="32">
            <span>Neoshine</span>
          </div>

          <div class="comment-wrapper">
            <span>❤ ${info.likes}</span>
            <p>${info.comment}</p>
          </div>
          <div class="date">${info.date}</div>
        </div>`;

        $('#popup-content').html(popupContent);
        $('#social-popup').css('display', 'flex');
        $('body,html').addClass('social-popup-open');
        // 初始化弹窗中的轮播
        if ($('.popup-swiper').length > 0) {
          new Swiper('.popup-swiper', {
            slidesPerView: 1,
            spaceBetween: 0,
            loop: true,
            pagination: {
              el: '.popup-swiper .swiper-pagination',
            },
            navigation: {
              nextEl: '.popup-swiper .swiper-button-next',
              prevEl: '.popup-swiper .swiper-button-prev',
            }
          });
        }
      })

      $('#social-popup .toggle-popup').on('click', function () {
        popupContent = ``;
        $('#social-popup').hide();
        $('body,html').removeClass('social-popup-open');
        $('#popup-content').html(popupContent);
      })

  })
</script>

{% schema %}
{
  "name": "Home social",
  "tag": "section",
  "class": "home-social",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title",
      "default": "As Seen On@neoshine_jewelry"
    },
    {
      "type": "text",
      "id": "btn_name",
      "label": "button name",
      "default": "VIEW MORE"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "button url"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "pc_image",
          "label": "image"
        },
        {
          "type": "image_picker",
          "id": "user_img",
          "label": "user image"
        },
        {
          "type": "text",
          "id": "user_name",
          "label": "user name"
        },
        {
          "type": "color",
          "id": "color",
          "label": "user name color",
          "default": "#ffffff"
        },
        {
          "type": "header",
          "content": "----popup info----",
          "info": "The maximum number of pictures is 3"
        },
        {
          "type": "image_picker",
          "id": "img1",
          "label": "image 1"
        },
        {
          "type": "image_picker",
          "id": "img2",
          "label": "image 2"
        },
        {
          "type": "image_picker",
          "id": "img3",
          "label": "image 3"
        },
        {
          "type": "video",
          "id": "video",
          "label": "video",
          "info": "if you want to use video, please delete all the images"
        },
        {
          "type": "text",
          "id": "likes",
          "label": "number of likes"
        },
        {
          "type": "textarea",
          "id": "comment",
          "label": "comment"
        },
        {
          "type": "text",
          "id": "date",
          "label": "date"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home social"
    }
  ]
}
{% endschema %}
