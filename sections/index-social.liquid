<style>
  #shopify-section-{{section.id}} .social-wrapper{
  }
  #shopify-section-{{section.id}} .social .view-more{
    margin: 50px auto 0;
    display: flex;
    width: 190px;
    height: 42px;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
    border-radius: 3px;
    border: 1px solid #121212;
    font-size: 20px;
    font-weight: 700;
    line-height: 28px;
    text-transform: uppercase;
    box-sizing: border-box;
    transition: all .3s ease-in-out;
  }
  #shopify-section-{{section.id}} .social .view-more:hover{
    background-color: #121212;
    color: #fff;
  }
  #shopify-section-{{section.id}} .social-wrapper .swiper-slide{
    cursor: pointer;
  }
  #shopify-section-{{section.id}} .user-wrapper{
    position: absolute;
    top: 20px;
    left: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
  }
  #shopify-section-{{section.id}} .user-wrapper img{
    width: 32px;
  }
  #shopify-section-{{section.id}} .user-wrapper .user-name{
    font-size: 15px;
    font-weight: 400;
    line-height: 20px;
  }
  #social-popup{
    position: fixed;
    font-size: 15px;
    z-index: 99999;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, .8);
    display: none;
  }
  .toggle-popup{
    position: absolute;
    height: 30px;
    width: 30px;
    color: #fff;
    font-size: 24px;
    top: 17px;
    right: 24px;
    line-height: 30px;
  }
  .toggle-popup:hover{
    cursor: pointer;
    opacity: .8;
  }
  #popup-content{
    background: #fff;
    height: 70%;
    width: 60%;
    max-width: 900px;
    border-radius: 16px;
  }
  @media screen and (max-width: 1200px) {
    #shopify-section-{{section.id}} .social .view-more{
      margin: 30px auto 0;
      width: 130px;
      height: 28px;
      font-size: 14px;
      line-height: 22px;
    }
  }
  @media screen and (max-width: 749px) {
    #shopify-section-{{section.id}} .guarantee .view-more{
      width: 190px;
    }
    #shopify-section-{{section.id}} .user-wrapper{
      top: 12px;
      left: 12px;
      gap: 5px;
    }
    #shopify-section-{{section.id}} .user-wrapper img{
      width: 18px;
      height: 18px;
    }
    #shopify-section-{{section.id}} .user-wrapper .user-name{
      font-size: 12px;
      line-height: 16px;
    }
  }
</style>

<div class="social page-width section-pt section-pb">
  <h2 class="section-title">{{section.settings.title}}</h2>
  <div class="social-wrapper swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
            {% render 'responsive-image',
              sid: section.id,
              image_desktop: block.settings.pc_image,
              image_mobile: block.settings.pc_image,
              alt: section.settings.title,
              lazy: true,
              preload: false
            %}
            <div class="user-wrapper">
              <img src="{{ block.settings.user_img | img_url: '32x' }}" alt="{{block.settings.user_name}}" width="32" height="32" loading="lazy">
              <span class="user-name" style="color: {{block.settings.color}};">{{block.settings.user_name}}</span>
            </div>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-prev">
      {% render 'banner-prev' %}
    </div>
    <div class="swiper-button-next">
      {% render 'banner-next' %}
    </div>
  </div>
  <a class="view-more" href="{{ section.settings.btn_url }}" target="_blank">{{ section.settings.btn_name }}</a>
</div>

<div id="social-popup">
  <span class="toggle-popup">✕</span>
  <div id="popup-content">1</div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const guarantee_swiper = new Swiper('.social .swiper', {
      slidesPerView: 1.2,
      spaceBetween: 10,
      loop: true,
      navigation: {
        nextEl: '.social .swiper-button-next',
        prevEl: '.social .swiper-button-prev',
      },
      breakpoints: { 
        750: {  //当屏幕宽度大于等于768 
          slidesPerView: 3,
          spaceBetween: 15
        },
        1200: {  //当屏幕宽度大于等于1280
          slidesPerView: 4,
          spaceBetween: 20
        }
      },
      pagination: {
        el: '.guarantee .swiper-pagination',
        type : 'progressbar',
      },
    })

    $('#social-popup .toggle-popup').on('click', function () {
      $('#social-popup').hide();
      $('body,html').removeClass('social-popup-open');
    })

    $('.social-wrapper .swiper-slide').on('click', function () {
      const index = $(this).index();
      const block = {{ section.blocks | json }}[index];
      console.log(block);
      
      let popupContent = '';
      
      // 检查是否有视频
      if (block.settings.video) {
        // popupContent = `<video controls width="100%">
        //   <source src="${block.settings.video}" type="video/mp4">
        // </video>`;
      } else {
        // 如果没有视频，则加载图片
        // const images = [block.settings.img1, block.settings.img2, block.settings.img3].filter(img => img);
        // if (images.length > 0) {
        //   popupContent = `<div class="popup-images">
        //     ${images.map(img => `<img src="${img}" alt="" loading="lazy">`).join('')}
        //   </div>`;
        // }
      }
      
      // 添加用户信息和互动数据
      popupContent += `
        <div class="popup-info">
          <div class="user-info">
            <img src="${block.settings.user_img}" alt="${block.settings.user_name}" width="32" height="32">
            <span>${block.settings.user_name}</span>
          </div>
          <div class="interaction-info">
            <span class="likes">❤️ ${block.settings.likes || 0}</span>
            <p class="comment">${block.settings.comment || ''}</p>
            <span class="date">${block.settings.date || ''}</span>
