{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  img {
    vertical-align: middle;
    width: 100%;
  }
  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .swiper_news {
      padding: 0 1.5rem;
    }
    #shopify-section-{{ section.id }}
    .swiper_title {
      font-family: Lato;
      font-size: 26px;
      font-weight: 400;
      line-height: 1.3;
      text-align: center;
    }
    #shopify-section-{{ section.id }}
    .swiper-wrapper {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
    #shopify-section-{{ section.id }}
    .article-box {
      display: flex;
      gap: 10px;
      border: 1px solid #E5E7EB;
      padding: 10px;
    }
    #shopify-section-{{ section.id }}
    .img_box {
      flex: 0 0 50%;
    }
    #shopify-section-{{ section.id }}
    .content h4 {
      font-size: 16px;
      font-weight: 600;
      line-height: 1.3;
      text-align: left;
      margin: 0;
    }
    #shopify-section-{{ section.id }}
    .content p {
      font-size: 12px;
      font-weight: 400;
      line-height: 1.5;
      text-align: left;
    }
    #shopify-section-{{ section.id }}
    .content a {
      font-size: 12px;
      font-weight: 400;
      line-height: 1.5;
      text-align: left;
      color: #181818;
    }
  }


  #shopify-section-{{ section.id }}.swiper-button-next:after,
  #shopify-section-{{ section.id }}.swiper-button-prev:after {
    font-size: 14px;
    color: #181818;
  }
  @media screen and (min-width: 750px) {

    #shopify-section-{{ section.id }} .swiper-wrapper {
      padding-bottom: 5rem;
    }
    #shopify-section-{{ section.id }}
    .swiper-pagination {
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
    }
    #shopify-section-{{ section.id }}
    .swiper-pagination-bullet.swiper-pagination-bullet-active {
      background: #636465;
    }
    #shopify-section-{{ section.id }}
    .swiper-pagination-bullet {
      background: transparent;
      opacity: 1;
      border: 1px solid #636465;
      margin-right: 1.5rem;
    }
    #shopify-section-{{ section.id }}
    .swiper-button-next
    , #shopify-section-{{ section.id }}
    .swiper-button-prev {
      display: block;
    }
    .section-{{ section.id }}
    -padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    #shopify-section-{{ section.id }}
    .swiper {
      padding: 0 5rem;
    }
    #shopify-section-{{ section.id }}
    .swiper_title {
      font-family: Lato;
      font-size: 32px;
      font-weight: 400;
      line-height: 1.3;
      text-align: center;
    }
    #shopify-section-{{ section.id }}
    .article-box {
      border: 1px solid #E5E7EB;
      padding: 20px;
    }
    #shopify-section-{{ section.id }}
    .content h4 {
      font-size: 16px;
      font-weight: 600;
      line-height: 1.3;
      text-align: left;
      height: 40px;
    }
    #shopify-section-{{ section.id }}
    .content p {
      font-size: 14px;
      font-weight: 400;
      line-height: 1.5;
      text-align: left;
      height: 105px;
    }
    #shopify-section-{{ section.id }}
    .content a {
      font-size: 14px;
      font-weight: 400;
      line-height: 1.5;
      text-align: left;
      color: #181818;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient isolate">
  <div class="swiper_news section-{{ section.id }}-padding">
    <div class="swiper_title {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      {{ section.settings.title }}</div>
    <div class="swiper NewsSwiper page-width">
      <div class="swiper-wrapper">
        {% for article in section.settings.blog.articles %}
          <div class="swiper-slide">
            <div class="article-box {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
              <div class="img_box">
                {% if article.image != blank %}
                  {% comment %} <img src="{{ article.image | img_url: '' }}" alt="{{  article.image.alt }}" width="100%"
                                  height="auto"> {% endcomment %}

                  {% assign full_width = '100vw' %}
                  {% assign sizes = full_width %}
                  {% assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' %}
                  {{
                    article.image | image_url: width: article.image.width | image_tag: width: article.image.width, height: '', class: '', sizes: sizes, widths: widths, alt: article.title, loading: 'lazy'
                  }}
                {% endif %}
              </div>
              <div class="content">
                <h4>{{ article.title }}</h4>
                <p class="small-hide">{{ article.content | strip_html | truncatewords: 30 }}</p>
                <p class="medium-hide large-up-hide">{{ article.content | strip_html | truncatewords: 10 }}</p>
                <a href="{{ article.url }}">Read More ></a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>
</div>

<script>
  let YourSwiper = null;
  document.addEventListener("DOMContentLoaded", (event) => {
    if (window.innerWidth < 750) {
      console.log('移动端');
      initYourSwiper();
    }

    window.addEventListener("resize", function () {
      initYourSwiper();
    });
  });

  function initYourSwiper() {
    if (YourSwiper) {
      YourSwiper.destroy(true, true); // 销毁并清除DOM
      YourSwiper = null;
    }
    YourSwiper = new Swiper(".NewsSwiper", {
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        navigation: {
          nextEl: ".swiper-button-next",
          prevEl: ".swiper-button-prev",
        },
        slidesPerView: 3,
        spaceBetween: 50,
    });
  }
</script>

{% schema %}
  {
    "name": "Blog News",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "info": "t:sections.all.colors.has_cards_info",
        "default": "scheme-1"
      },
      {
        "type": "richtext",
        "id": "title",
        "label": "t:sections.collage.settings.heading.label"
      },
      {
        "type": "blog",
        "id": "blog",
        "label": "blog"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Blog News"
      }
    ]
  }
{% endschema %}