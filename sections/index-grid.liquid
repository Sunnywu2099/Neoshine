{% assign full_width = '100vw' %}
{% assign sizes = full_width %}
{% assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' %}

<div class="index-grid page-width section-pt">
  {% for block in section.blocks %}
    <a
      class="item item-{{ forloop.index }}"
      {% if block.settings.url != blank %}
      href="{{ block.settings.url }}"
      {% endif %}>
      <div class="img-wrapper">
        {% comment %} {{ block.settings.pc_image
          | image_url: width: 3840
          | image_tag:
          width: block.settings.pc_image.width,
          height: '',
          class: 'pc',
          sizes: sizes,
          widths: widths,
          loading: 'lazy'
        }}
        {{ block.settings.mobile_image
          | image_url: width: 3840
          | image_tag:
          width: block.settings.mobile_image.width,
          height: '',
          class: 'mb',
          sizes: sizes,
          widths: widths,
          loading: 'lazy'
        }} {% endcomment %}
        {% render 'responsive-image',
          sid: section.id,
          image_desktop: block.settings.pc_image,
          image_mobile: block.settings.mobile_image,
          alt: block.settings.title,
          lazy: true,
          preload: false
        %}
      </div>
    </a>
  {% endfor %}

</div>

{% schema %}
  {
    "name": "Home grid",
    "tag": "section",
    "class": "home-grid",
    "limit": 1,
    "max_blocks": 4,
    "settings": [],
    "blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "pc_image",
            "label": "pc_image"
          },
          {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "mobile_image"
          },
          {
            "type": "textarea",
            "id": "title",
            "label": "title"
          },
          {
            "type": "textarea",
            "id": "content",
            "label": "content"
          }, {
            "type": "product",
            "id": "product",
            "label": "Product"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Home grid"
      }
    ]
  }
{% endschema %}