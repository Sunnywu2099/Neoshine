<style>
  #shopify-section-{{section.id}} .index-grid{
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 15px;
  }
  #shopify-section-{{section.id}} .index-grid .item{
    
  }
  #shopify-section-{{section.id}} .index-grid .item-1{
    grid-column: span 4 / span 4;
  }
  #shopify-section-{{section.id}} .index-grid .item-2{
    grid-row-start: 2;
  }
  #shopify-section-{{section.id}} .index-grid .item-3{
    grid-row-start: 2;
  }
  #shopify-section-{{section.id}} .index-grid .item-4{
    grid-column: span 2 / span 2;
    grid-row-start: 2;
  }
  @media screen and (max-width: 1024px) {

  }
  @media screen and (max-width: 749px) {

  }
</style>

<div class="index-grid">
  {% for block in section.blocks %} 
    <a class="item item-{{ forloop.index }}" {% if block.settings.url != blank %}href="{{ block.settings.url }}"{% endif %}>
      <div class="img-wrapper">
        {% render 'responsive-image',
          sid: section.id,
          image_desktop: block.settings.pc_image,
          image_mobile: block.settings.mobile_image,
          alt: block.settings.title,
          lazy: true,
          preload: false
        %}
      </div>
    </a>
  {% endfor %}
  
</div>

{% schema %}
{
  "name": "Home grid",
  "tag": "section",
  "class": "home-grid",
  "limit": 1,
  "max_blocks": 4,
  "settings": [],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "pc_image",
          "label": "pc_image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "mobile_image"
        },
        {
          "type": "textarea",
          "id": "title",
          "label": "title"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "content"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home grid"
    }
  ]
}
{% endschema %}
