{%- style -%}
  @media screen and (max-width: 749px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
    #shopify-section-{{ section.id }} .index-category{
      display:flex;
      gap:12px;
      flex-wrap:wrap;
    }
    #shopify-section-{{ section.id }} img{
      width:100%;
    }
    #shopify-section-{{ section.id }} .cate-block{
      flex: 0 0 50%;
      max-width:calc(50% - 6px);     
    }
    #shopify-section-{{ section.id }} .cate-block-1{
      position:relative;
    }
    #shopify-section-{{ section.id }} .cate-block.cate-block-1 h4{
      color: #fff;
      font-family: "ZCOOLXiaoWei";
      font-size: 28px;
      font-style: normal;
      font-weight: 400;
      line-height: 100%; 
      margin:0 0 10px;
      position:absolute;
      bottom:90px;
      width:100%;
      text-align:center;
    }
    #shopify-section-{{ section.id }} .cate-block.cate-block-1 img{
      aspect-ratio: 458 / 870;
    }
    #shopify-section-{{ section.id }} .cate-block.cate-block-1 .button{
      background:transparent;
      position:absolute;
      bottom:30px;
      display:flex;
      left:50%;
      transform: translateX(-50%);  
      color: #fff;
      padding: 0;
      font-size:12px;
      padding: 9.238px 23.095px;
    }   
    #shopify-section-{{ section.id }} .cate-block h4{
      font-size: 14px;
      font-style: normal;
      font-weight: 700;
      line-height: 17.321px; /* 123.723% */
    }
    #shopify-section-{{ section.id }} .cate-block.cate-block-1 h4 a{
      color:#fff;
      text-decoration:none;
    }    
    #shopify-section-{{ section.id }} .cate-block h4 a{
      color:#222;
      text-decoration:none;
    }
  }

  #shopify-section-{{ section.id }}{
    overflow:hidden;
  }

  
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    #shopify-section-{{ section.id }} img{
      width:100%;
    }
    #shopify-section-{{ section.id }} .cate-title h2{
      color: #222;
      font-family: "ZCOOLXiaoWei";
      font-size: 44px;
      font-style: normal;
      font-weight: 400;
      line-height: 56px; /* 127.273% */
      margin:0 0 16px;
    }
    #shopify-section-{{ section.id }} .cate-title p{
      color: #222;
      font-size: 20px;
      font-style: normal;
      font-weight: 400;
      line-height: 30px; /* 150% */
      opacity: 0.5;
      max-width:50%;
      margin-bottom:48px;
    }    
    #shopify-section-{{ section.id }} .cate-block h4{
      color: #fff;
      font-family: "ZCOOLXiaoWei";
      font-size: 48px;
      font-style: normal;
      font-weight: 400;
      line-height: 56px; /* 116.667% */
      margin:0 0 30px;
      position:absolute;
      bottom:150px;
      width:100%;
      text-align:center;
    }
    #shopify-section-{{ section.id }} .cate-block .button{
      background:transparent;
      position:absolute;
      bottom:80px;
      display:flex;
      left:50%;
      transform: translateX(-50%);  
      color: #fff;
      padding: 0;
    }
    #shopify-section-{{ section.id }} .cate-block{
      position:relative;
    }
    
    #shopify-section-{{ section.id }} .index-category{
      display:flex;
      gap:16px;
    }
    #shopify-section-{{ section.id }} .index-category .cate-div-first{
      flex: 0 0 25%;
      max-width:calc(25% - 16px);
    }
    #shopify-section-{{ section.id }} .index-category .cate-div{
      flex: 0 0 75%;
      max-width:75%;
    }    
    #shopify-section-{{ section.id }} .cate-block-div{
      display:flex;
      gap:16px;      
    }
    #shopify-section-{{ section.id }} .cate-block-3{
      flex: 0 0 33.33%;
      max-width:calc(33.33% - 16px);      
    }
    #shopify-section-{{ section.id }} .cate-block-3 h4{
      font-size: 24px;
      font-style: normal;
      font-weight: 700;
      line-height: 30px; /* 125% */
      margin:20px 0 0;
    }
    #shopify-section-{{ section.id }} .cate-block-3 h4 a{
      color:#222;
      text-decoration:none;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient isolate page-width">
  <div class="index-category section-{{ section.id }}-padding">

    <div class="cate-div-first small-hide">
    {% for block in section.blocks %}
      {% if forloop.index == 1 %}
      <div class="cate-block-{{ forloop.index }} cate-block {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <img src="{{ block.settings.image | img_url:'' }}" width="" height="" alt="{{ block.settings.image.alt }}">
        <h4>{{ block.settings.title }}</h4>
        <a class="button button--secondary" href="{{ block.settings.link }}">
          SHOP NOW
        </a>          
      </div>
      {% endif %}  
    {% endfor %}
    </div>
    
    <div class="cate-div small-hide">
      <div class="cate-title {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">{{ section.settings.title }}</div>
      <div class="cate-block-div">
      {% for block in section.blocks %}
        {% if forloop.index > 1 %}
        <div class="cate-block-{{ forloop.index }} cate-block-3 {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          <img src="{{ block.settings.image | img_url:'' }}" width="" height="" alt="{{ block.settings.image.alt }}">
          <h4><a href="{{ block.settings.link }}">{{ block.settings.title }}</a></h4>
        </div>
        {% endif %}
      {% endfor %}
      </div>
    </div>

      {% for block in section.blocks %}
        <div class="cate-block-{{ forloop.index }} cate-block large-up-hide medium-hide {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          <img src="{{ block.settings.image | img_url:'' }}" width="" height="" alt="{{ block.settings.image.alt }}">
          <h4><a href="{{ block.settings.link }}">{{ block.settings.title }}</a></h4>
        {% if forloop.index == 1 %}
        <a class="button button--secondary" href="{{ block.settings.link }}">
          SHOP NOW
        </a> 
        {% endif %}
        </div>
      {% endfor %}

    
  </div>
</div>


{% schema %}
  {
    "name": "index category",
    "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "title"
    },      
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-1"
    },      
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }      
    ],
  "blocks": [
    {
      "type": "category",
      "name": "category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },        
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },       
        {
          "type": "url",
          "id": "link",
          "label": "link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "index category"
    }
  ]    
  }
{% endschema %}