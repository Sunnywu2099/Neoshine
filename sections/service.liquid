
<style>
  #shopify-section-{{ section.id }} .service {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    #shopify-section-{{ section.id }} .service .centent{
      width:100%;
      
      display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
    }

  #shopify-section-{{ section.id }} .service .centent .title{
    margin:0;
  }
  #shopify-section-{{ section.id }} .service .centent .mySwiper{
    width:100%;
        padding-bottom: 100px;
    margin-top:15px;
  }
  #shopify-section-{{ section.id }} .service .centent .mySwiper .swiper-slide{
    display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
  }
  #shopify-section-{{ section.id }} .service .centent .mySwiper .swiper-slide .image{
    width:100%;
    min-height:120px;
      background: #FAFAFA;
    display: flex;
            align-items: center;
            justify-content: center;
  }
  #shopify-section-{{ section.id }} .service .centent .mySwiper .swiper-slide .datalist{
    text-align: center;
  }
   #shopify-section-{{ section.id }} .service .centent .mySwiper .swiper_button{
     display:flex;
     width:50px;
     height:50px;
     border-radius: 50%;
     background: #eee;
     bottom:0;
     bottom: 0;
    top: auto;
   }
  #shopify-section-{{ section.id }} .service .centent .mySwiper .swiper_button:after{
    font-size:18px;
    color:#aaa;
  }
  #shopify-section-{{ section.id }} .service .centent .mySwiper .swiper-button-prev{
    left:89%;
  }

  @media screen and (max-width: 750px) {
     #shopify-section-{{ section.id }} .service .centent .mySwiper{
          padding-bottom: 80px;
     }
    #shopify-section-{{ section.id }} .service .centent .mySwiper .swiper_button{
      width:40px;
     height:40px;
    }
    #shopify-section-{{ section.id }} .service .centent .mySwiper .swiper_button:after{
      font-size:16px;
    }
    #shopify-section-{{ section.id }} .service .centent .mySwiper .swiper-button-prev{
      left:35%;
    }
    #shopify-section-{{ section.id }} .service .centent .mySwiper .swiper-button-next{
      right:35%
    }

    
  }



  
</style>



<div class="service">
  <div class="centent page-width">
    <div class="title">{{ section.settings.title }}</div>
    <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
      <div class="swiper-slide">
          <div class="image">
            <img src="{{ block.settings.image | img_url:'' }}" alt="{{ block.settings.image.alt }}" width="" height="" >
          </div>
        <div class="title">{{ block.settings.title }}</div>
                <div class="datalist">{{ block.settings.datalist }}</div>
        
      </div>

        {% endfor %}
      
    </div>
    <div class="swiper-button-next swiper_button"></div>
    <div class="swiper-button-prev swiper_button"></div>
    <!-- <div class="swiper-pagination"></div> -->
  </div>
  </div>
  
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
      var swiper = new Swiper("#shopify-section-{{ section.id }} .mySwiper", {
      
      loop: true,
         breakpoints: {

        320: {
          slidesPerView: 1.5, 
          spaceBetween: 10   
        },
        640: {
          slidesPerView: 2, 
          spaceBetween: 15   
        },
        
        768: {
          slidesPerView: 3,  
          spaceBetween: 20   
        },
        
        1024: {
          slidesPerView: 4,  
          spaceBetween: 25   
        }
      },
      
      navigation: {
        nextEl: "#shopify-section-{{ section.id }} .swiper-button-next",
        prevEl: "#shopify-section-{{ section.id }} .swiper-button-prev",
      },
    });



      
    })
  
</script>




{% schema %}
  {
    "name": "service",
    "settings": [
      {
        "type": "richtext",
        "id": "title",
        "label": "title"
      },
      {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }     
    ],
    "blocks": [
      {
        "type": "item",
        "name":"item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "image"
          },
          {
            "type": "richtext",
            "id": "title",
            "label": "title"
          },
          {
            "type": "inline_richtext",
            "id": "datalist",
            "label": "datalist"
          }
          
        ]
      }
    ],
    "presets": [
    {
      "name": "service"
    }
  ]  
  }
{% endschema %}