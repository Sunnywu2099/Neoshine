<style>
  #shopify-section-{{section.id}}.home-logo .logo-wrapper{
    position: relative;
  }
  .logo-container {
    overflow: hidden;
    width: 100%;
  }

  .logo-item {
    width: auto;  /* 或设置固定宽度 */
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }
  .home-logo .swiper-wrapper {
    transition-timing-function: linear !important; /* 使用线性过渡，确保匀速滚动 */
  }
  .logo-track {
    width: 100%;
  }
  @media screen and (max-width: 749px) {

  }
</style>
<div class="logo-container section-pt">
    <div class="logo-track swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="logo-item swiper-slide">
            {{ block.settings.icon_svg }}
          </div>
        {% endfor %}
      </div>
    </div>
</div>

<script>
  $(document).ready(function() {
    const logo_swiper = new Swiper('.logo-container .logo-track', {
      slidesPerView: 'auto',  // 自动计算每屏显示的slide数量
      spaceBetween: 50,
      loop: true,
      speed: 3000,  // 设置过渡速度更慢，使效果更平滑
      freeMode: {
        enabled: true,
        momentum: false,
        pauseOnMouseEnter: false
      },
      autoplay: {
        delay: 0,  // 设置为0，实现无缝滚动
        disableOnInteraction: false
      },
      allowTouchMove: false,
      cssMode: false 
    })
  });
</script>


{% schema %}
{
  "name": "Home logo",
  "tag": "section",
  "class": "home-logo",
  "limit": 1,
  "settings": [
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "html",
          "id": "icon_svg",
          "label": "icon svg"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home logo"
    }
  ]
}
{% endschema %}
