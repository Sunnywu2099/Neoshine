</script>

{% schema %}
{
  "name": "Home service",
  "tag": "section",
  "class": "home-service",
  "limit": 1,
  "max_blocks": 2,
  "settings": [
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "pc_image",
          "label": "pc image"
        },
        {
          "type": "image_picker",
          "id": "mb_image",
          "label": "mb image"
        },
        {
          "type": "text",
          "id": "btn_name",
          "label": "button name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home service"
    }
  ]
}
{% endschema %}
