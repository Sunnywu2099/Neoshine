<style>
  #shopify-section-{{section.id}} .service-wrapper{
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
  }
  #shopify-section-{{section.id}} .service-wrapper .item{
    text-align: center;
    width: calc( (100% - 20px)/2);
  }
  #shopify-section-{{section.id}} .service-wrapper .item .img-wrapper{
    width: 100%;
    overflow: hidden;
  }
  #shopify-section-{{section.id}} .service-wrapper .item img{
    object-fit: cover;
    width: 100%;
    height: 100%;
  }
  #shopify-section-{{section.id}} .service-wrapper .item .style-name{
    color: #121212;
    text-align: center;
    font-size: 20px;
    font-weight: 500;
    line-height: 26px;
    text-transform: capitalize;
  }
  @media screen and (max-width: 1200px) {
    #shopify-section-{{section.id}} .service-wrapper .item .style-name{
      font-size: 18px;
      line-height: 22px;
    }
  }
  @media screen and (max-width: 749px) {
    #shopify-section-{{section.id}} .service-wrapper .item .style-name{
      font-size: 12px;
      line-height: 18px;
    }
    #shopify-section-{{section.id}} .service-wrapper{
      column-gap: 0px;
      row-gap: 40px;
    }
    #shopify-section-{{section.id}} .service-wrapper .item{
      flex: 0 0 100%;
    }
    #shopify-section-{{section.id}} .service-wrapper .item .img-wrapper{

    }
  }
</style>

{% assign full_width = '100vw' %}
{% assign sizes = full_width %}
{% assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' %}
<div class="service page-width section-pt">
  <h2 class="section-title">{{section.settings.title}}</h2>
  <div class="service-wrapper">
    {% for block in section.blocks %}
      <div class="item">
          <div class="img-wrapper">
            {{
              block.settings.pc_image
              | image_url: width: block.settings.pc_image.width
              | image_tag:
                width: block.settings.pc_image.width,
                height: block.settings.pc_image.height,
                class: 'pc',
                sizes: sizes,
                widths: widths,
                alt: block.settings.text,
                loading: 'lazy'
            }}
            {{
              block.settings.mb_image
              | image_url: width: block.settings.mb_image.width
              | image_tag:
                width: block.settings.mb_image.width,
                height: block.settings.mb_image.height,
                class: 'mb',
                sizes: sizes,
                widths: widths,
                alt: block.settings.text,
                loading: 'lazy'
            }}
          </div>
          <div class="service-name">{{ block.settings.btn_name }}</div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Home service",
  "tag": "section",
  "class": "home-service",
  "limit": 1,
  "max_blocks": 2,
  "settings": [
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "pc_image",
          "label": "pc image"
        },
        {
          "type": "image_picker",
          "id": "mb_image",
          "label": "mb image"
        },
        {
          "type": "text",
          "id": "btn_name",
          "label": "button name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home service"
    }
  ]
}
{% endschema %}
