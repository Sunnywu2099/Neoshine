<style>
  #shopify-section-{{section.id}}.custom-warranty-icons{
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    overflow: hidden;
  }
  #shopify-section-{{section.id}}.custom-warranty-icons .wrapper{
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    padding: 0 15px;
    width: 100%;
    margin: 0 auto;
    max-width: 1170px;
  }
  #shopify-section-{{section.id}}.custom-warranty-icons .item{
    flex-shrink: 0;
    width: calc((100% - 45px)/4);
  }
  #shopify-section-{{section.id}}.custom-warranty-icons .item img{
    width: 100%;
    max-width: 52px;
    margin: 0 auto;
    display: block;
  }
  #shopify-section-{{section.id}}.custom-warranty-icons .item .content{
    text-align: center;
  }
  @media screen and (max-width: 999px) {

  }
  @media screen and (max-width: 750px) {
    #shopify-section-{{section.id}}.custom-warranty-icons .item{
      flex-shrink: 0;
      width: calc((100% - 15px) / 2);
    }
    #shopify-section-{{section.id}}.custom-warranty-icons .item .content{
      font-size: 14px;
    }
  }
</style>

{% if section.settings.title != blank %}
  <h2 class="h2" style="font-weight:600;text-align:center;">{{ section.settings.title }}</h2>
{% endif %}
<div class="wrapper">
  {% for block in section.blocks %}

          <div class="item">
            {% assign image_height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio %}
            {% assign full_width = '100vw' %}
            {% assign sizes = full_width %}
            {% assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' %}
            {{
              block.settings.image
              | image_url: width: block.settings.image.width
              | image_tag:
                width: block.settings.image.width,
                height: image_height,
                class: '',
                sizes: sizes,
                widths: widths,
                loading: 'lazy'
            }}
          {% if block.settings.text != blank %}
            <div class="content">{{ block.settings.text}}</div>
          {% endif %}
          </div>
        
  {% endfor %}
</div>

{% schema %}
{
  "name": "Custom warranty icons",
  "tag": "section",
  "class": "custom-warranty-icons",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom warranty icons"
    }
  ]
}
{% endschema %}
