<style>
  #shopify-section-{{section.id}} .guarantee .img-wrapper{
    position: relative;
  }
  #shopify-section-{{section.id}} .guarantee .banner-wrapper{
    padding: 40px;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
    
  }
  #shopify-section-{{section.id}} .guarantee .banner-title{
    font-size: 36px;
    line-height: 48px;
    margin-top: 0;
    margin-bottom: 25px;
    color: #fff;
  }
  #shopify-section-{{section.id}} .guarantee .view-more{
    margin: 50px 0 0 50px;
    display: flex;
    width: 240px;
    height: 42px;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
    border-radius: 3px;
    border: 1px solid #121212;
    font-size: 20px;
    font-weight: 700;
    line-height: 28px;
    text-transform: uppercase;
  }
  @media screen and (max-width: 1200px) {
    #shopify-section-{{section.id}} .guarantee .banner-title{
      font-size: 30px;
      line-height: 42px;
    }
  }
  @media screen and (max-width: 749px) {
    #shopify-section-{{section.id}} .guarantee .banner-title{
      font-size: 26px;
      line-height: 32px;
      margin-bottom: 16px;
    }
  }
</style>

<div class="guarantee section-pt page-width">
  <div class="swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %} 
        <div class="swiper-slide item">
          <div class="img-wrapper">
            {% render 'responsive-image',
              sid: section.id,
              image_desktop: block.settings.pc_image,
              image_mobile: block.settings.mobile_image,
              alt: block.settings.title,
              lazy: false,
              preload: true
            %}
            <div class="banner-wrapper">
              <div class="banner-container">
                <h2 class="banner-title">{{ block.settings.title }}</h2>
              </div>
            </div>
          </div>
          <a class="view-more" href="{{ block.settings.url }}">{{ block.settings.btn_name }}</a>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-prev">
      {% render 'banner-prev' %}
    </div>
    <div class="swiper-button-next">
      {% render 'banner-next' %}
    </div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const guarantee_swiper = new Swiper('.guarantee .swiper', {
      slidesPerView: 1.2,
      spaceBetween: 24,
      loop: true,
      navigation: {
        nextEl: '.guarantee .swiper-button-next',
        prevEl: '.guarantee .swiper-button-prev',
      },
      pagination: {
        el: '.guarantee .swiper-pagination',
        clickable: true,
      },
    })
  })
</script>

{% schema %}
{
  "name": "Home guarantee",
  "tag": "section",
  "class": "home-guarantee",
  "limit": 1,
  "max_blocks": 4,
  "settings": [
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "pc_image",
          "label": "pc image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "mobile image"
        },
        {
          "type": "textarea",
          "id": "title",
          "label": "title"
        },
        {
          "type": "url",
          "id": "url",
          "label": "url"
        },
        {
          "type": "text",
          "id": "btn_name",
          "label": "button name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home guarantee"
    }
  ]
}
{% endschema %}
