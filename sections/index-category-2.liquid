<style>
  #shopify-section-{{section.id}} .index_category{
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
   #shopify-section-{{section.id}} .index_category .centent{
     display:flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
   }
  #shopify-section-{{section.id}} .index_category .centent .title{
    margin:0;
  }
  #shopify-section-{{section.id}} .index_category .centent .title *{
    margin:0;
  }
  #shopify-section-{{section.id}} .index_category .centent .details{
    font-size:20px;
    color:#222;
  }
  #shopify-section-{{section.id}} .index_category .centent .center{
    display:flex;
      align-items: center;
    width:100%;
        min-height: 600px;
    margin-top: 20px;
  }
  #shopify-section-{{section.id}} .index_category .centent .center .item{
    width:100%;
    max-width:24%;
    margin:0 0.5%;
     display:flex;
      align-items: center;
     flex-direction: column;
  }
  #shopify-section-{{section.id}} .index_category .centent .center .item:hover{
      transform: scaleY(1.1);
    transition: all .2s;
  }
  #shopify-section-{{section.id}} .index_category .centent .center .item .image img.art{
    display:none;
  }
  #shopify-section-{{section.id}} .index_category .centent .center .item:hover .image img{
    display:none;
  }
  #shopify-section-{{section.id}} .index_category .centent .center .item:hover .image img.art{
    display:block;
  }
  #shopify-section-{{section.id}} .index_category .centent .center .item .btns{
    text-decoration: none;
    color:#000;
    font-size:15px;
    border-radius:4px;
    height:37px;
    /* font-weight: bold; */
  }
  #shopify-section-{{section.id}} .index_category .centent .center .item:hover .btns{
    background: #83A78D;
    color:#fff;
    font-weight: 500;
    margin-top:20px;
    padding: 3px 30px;
    transform: scaleY(.9);
  }

  @media screen and (max-width: 750px) {
    #shopify-section-{{section.id}} .index_category .centent .details{
      text-align: center;
    }
    #shopify-section-{{section.id}} .index_category .centent .center{
          flex-wrap: wrap;
      gap:1%;
    }
    #shopify-section-{{section.id}} .index_category .centent .center .item{
      max-width:49%;
      margin:20px 0;
    }
    #shopify-section-{{section.id}} .index_category .centent .center .item:hover{
      transform: scaleY(1);
    }
    #shopify-section-{{section.id}} .index_category .centent .center .item:hover .btns{
      transform: scaleY(1);
    }
     #shopify-section-{{section.id}} .index_category .centent .center .item .btns{
        background: #83A78D;
        color:#fff;
        font-weight: 500;
        margin-top:20px;
        padding:0 15px;
        padding: 0 20px;
       line-height: 37px;
     }
  }

  

  
</style>

<div class="index_category">
  <div class="centent page-width">
    <div class="title">{{ section.settings.title }}</div>
    <div class="details">{{ section.settings.details }}</div>
    <div class="center">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'item' %}
            <div class="item">
              <div class="image">
                <img src="{{ block.settings.image_1 | img_url:'' }}" alt="{{ block.settings.image_1.alt }}" width="100%" height="" />
                <img class="art" src="{{ block.settings.image_2 | img_url:'' }}" alt="{{ block.settings.image_2.alt }}" width="100%" height="" />
              </div>
              <a href="{{ block.settings.url }}" class="btns">{{ block.settings.btn }}</a>
            </div>
          
            
        {% endcase %}
      {% endfor %}
      
    </div>
  </div>
</div>

{% schema %}
{
  "name": "index category 2",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "title"
    },
    {
      "type": "inline_richtext",
      "id": "details",
      "label": "details"
    },
    {
    "type": "header",
    "content": "t:sections.all.padding.section_padding_heading"
  },
  {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 36
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 36
  }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "image_1"
        },
        {
          "type": "image_picker",
          "id": "image_2",
          "label": "image_2"
        },
        {
          "type": "text",
          "id": "btn",
          "label": "btn"
        },
        {
          "type": "url",
          "id": "url",
          "label": "url"
        }
      ]
    }
  ],
  "presets": [
  {
    "name": "index category 2"
  }
]
}
{% endschema %}
